{
  "securityPolicies": {
    "accessControl": {
      "multiSigThresholds": {
        "critical": 3,
        "high": 2,
        "medium": 1,
        "low": 1
      },
      "sessionTimeout": 3600,
      "maxLoginAttempts": 5,
      "passwordPolicy": {
        "minLength": 12,
        "requireUppercase": true,
        "requireLowercase": true,
        "requireNumbers": true,
        "requireSpecialChars": true
      }
    },
    "cryptographic": {
      "keyRotation": {
        "default": 90,
        "critical": 30,
        "high": 60
      },
      "encryption": {
        "algorithm": "AES-256-GCM",
        "keyDerivation": "PBKDF2",
        "hashAlgorithm": "SHA-256"
      },
      "signing": {
        "algorithm": "ECDSA",
        "curve": "secp256k1"
      }
    },
    "networkSecurity": {
      "rateLimiting": {
        "api": 1000,
        "rpc": 100,
        "admin": 10
      },
      "firewall": {
        "allowedIPs": [],
        "blockedCountries": [],
        "geoFencing": true
      },
      "tls": {
        "minVersion": "TLSv1.3",
        "ciphers": [
          "TLS_AES_256_GCM_SHA384",
          "TLS_CHACHA20_POLY1305_SHA256"
        ]
      }
    },
    "incidentResponse": {
      "emergencyStop": {
        "riskThreshold": 0.9,
        "autoTrigger": true,
        "notificationChannels": ["sms", "email", "webhook"]
      },
      "alerting": {
        "critical": "immediate",
        "high": "15min",
        "medium": "1h",
        "low": "4h"
      }
    }
  },
  "compliance": {
    "regulations": ["GDPR", "SOX", "PCI-DSS"],
    "auditRetention": 2555,
    "dataEncryption": true,
    "accessLogging": true
  },
  "threatIntelligence": {
    "sources": [
      "Forta",
      "BlockSec",
      "Certik",
      "SlowMist"
    ],
    "updateFrequency": "1h",
    "autoBlock": true
  },
  "monitoring": {
    "logRetention": 365,
    "realTimeAlerts": true,
    "anomalyDetection": true,
    "performanceMetrics": true
  }
}
