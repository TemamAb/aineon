{
  "dashboard": {
    "title": "Aineon Trading System - Executive Overview",
    "version": "1.0.0",
    "refresh": "30s",
    "tags": ["trading", "performance", "security", "cost"],
    "time": {
      "from": "now-6h",
      "to": "now"
    }
  },
  "panels": {
    "systemHealth": {
      "title": "System Health Overview",
      "type": "stat",
      "targets": [
        {
          "expr": "aineon_system_health_score",
          "legendFormat": "Overall Health Score"
        }
      ],
      "thresholds": {
        "steps": [
          { "color": "red", "value": 0 },
          { "color": "yellow", "value": 80 },
          { "color": "green", "value": 95 }
        ]
      }
    },
    "tradingPerformance": {
      "title": "Trading Performance",
      "type": "timeseries",
      "targets": [
        {
          "expr": "aineon_trades_total",
          "legendFormat": "Total Trades"
        },
        {
          "expr": "aineon_profit_total",
          "legendFormat": "Total Profit"
        },
        {
          "expr": "aineon_success_rate",
          "legendFormat": "Success Rate"
        }
      ]
    },
    "costMonitoring": {
      "title": "Cost Analysis",
      "type": "bargauge",
      "targets": [
        {
          "expr": "aineon_cloud_costs_current",
          "legendFormat": "Current Cloud Costs"
        },
        {
          "expr": "aineon_gas_costs_current",
          "legendFormat": "Current Gas Costs"
        }
      ],
      "thresholds": {
        "steps": [
          { "color": "green", "value": 0 },
          { "color": "yellow", "value": 1000 },
          { "color": "red", "value": 5000 }
        ]
      }
    },
    "securityStatus": {
      "title": "Security Monitoring",
      "type": "piechart",
      "targets": [
        {
          "expr": "aineon_security_events{level='critical'}",
          "legendFormat": "Critical"
        },
        {
          "expr": "aineon_security_events{level='high'}",
          "legendFormat": "High"
        },
        {
          "expr": "aineon_security_events{level='medium'}",
          "legendFormat": "Medium"
        },
        {
          "expr": "aineon_security_events{level='low'}",
          "legendFormat": "Low"
        }
      ]
    },
    "resourceUtilization": {
      "title": "Resource Utilization",
      "type": "gauge",
      "targets": [
        {
          "expr": "aineon_cpu_utilization",
          "legendFormat": "CPU Usage"
        },
        {
          "expr": "aineon_memory_utilization",
          "legendFormat": "Memory Usage"
        },
        {
          "expr": "aineon_disk_utilization",
          "legendFormat": "Disk Usage"
        }
      ],
      "thresholds": {
        "steps": [
          { "color": "green", "value": 0 },
          { "color": "yellow", "value": 70 },
          { "color": "red", "value": 90 }
        ]
      }
    },
    "alertSummary": {
      "title": "Active Alerts",
      "type": "table",
      "targets": [
        {
          "expr": "aineon_alerts_active",
          "legendFormat": "Active Alerts by Severity"
        }
      ],
      "columns": [
        { "text": "Severity", "type": "string" },
        { "text": "Count", "type": "number" },
        { "text": "Service", "type": "string" }
      ]
    }
  },
  "templating": {
    "list": [
      {
        "name": "service",
        "type": "query",
        "query": "label_values(aineon_metrics, service)",
        "refresh": 1,
        "includeAll": true
      },
      {
        "name": "time_range",
        "type": "interval",
        "query": "1m,5m,15m,30m,1h,6h,12h,1d,7d,30d",
        "refresh": 2
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "name": "Deployments",
        "datasource": "Prometheus",
        "query": "aineon_deployment_events",
        "enable": true
      },
      {
        "name": "Incidents",
        "datasource": "Prometheus",
        "query": "aineon_incident_events",
        "enable": true
      }
    ]
  },
  "links": [
    {
      "title": "Technical Dashboard",
      "url": "/d/technical-overview",
      "type": "dashboard"
    },
    {
      "title": "Cost Dashboard",
      "url": "/d/cost-analysis",
      "type": "dashboard"
    },
    {
      "title": "Security Dashboard",
      "url": "/d/security-overview",
      "type": "dashboard"
    }
  ]
}
