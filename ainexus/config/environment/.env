# AI-NEXUS Production Environment Configuration
# Enterprise-grade configuration with encrypted secrets

# Application Configuration
NODE_ENV=production
APP_NAME=AI-NEXUS-Arbitrage
APP_VERSION=5.0.0
LOG_LEVEL=INFO
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://user:${DB_PASSWORD}@localhost:5432/ainexus
DB_MAX_CONNECTIONS=50
DB_SSL_MODE=require

# Redis Configuration
REDIS_URL=redis://${REDIS_PASSWORD}@localhost:6379/0
REDIS_MAX_CONNECTIONS=100

# Blockchain RPC Endpoints
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/${INFURA_API_KEY}
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
POLYGON_RPC_URL=https://polygon-rpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org

# Exchange API Keys (Encrypted)
BINANCE_API_KEY=${BINANCE_API_KEY}
BINANCE_SECRET_KEY=${BINANCE_SECRET_KEY}
COINBASE_API_KEY=${COINBASE_API_KEY}
COINBASE_SECRET_KEY=${COINBASE_SECRET_KEY}

# DeFi Protocol Configuration
UNISWAP_V3_ROUTER=0xE592427A0AEce92De3Edee1F18E0157C05861564
SUSHISWAP_ROUTER=0xd9e1cE17f2641f24aE83637ab66a2cca9C378B9F
AAVE_POOL_ADDRESS=0x7d2768dE32b0b80b7a3454c06BdAc94A69DDc7A9

# Security Configuration
JWT_SECRET=${JWT_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}
CORS_ORIGINS=https://app.ainexus.com,https://admin.ainexus.com

# Monitoring & Analytics
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3000
SENTRY_DSN=${SENTRY_DSN}

# Performance Configuration
MAX_ARBITRAGE_AMOUNT=10000
MIN_PROFIT_THRESHOLD=0.002
MAX_SLIPPAGE=0.005
EXECUTION_TIMEOUT=30000

# Risk Management
MAX_POSITION_SIZE=5000
DAILY_LOSS_LIMIT=1000
RISK_FREE_RATE=0.02
VAR_CONFIDENCE_LEVEL=0.95

# AI Model Configuration
AI_MODEL_PATH=./models/arbitrage_predictor
MODEL_UPDATE_FREQUENCY=3600
PREDICTION_CONFIDENCE_THRESHOLD=0.7

# Feature Flags
ENABLE_FLASH_LOANS=true
ENABLE_CROSS_CHAIN=true
ENABLE_MEV_PROTECTION=true
ENABLE_AI_PREDICTIONS=true
